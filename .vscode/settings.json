{
    // ================== EDITOR ==================
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 14,
    "editor.lineHeight": 2.5,
    "editor.fontLigatures": true,
    "editor.rulers": [
        80,
        120
    ],
    "editor.wordWrapColumn": 80,
    "editor.renderLineHighlight": "gutter",
    "editor.minimap.enabled": false,
    "editor.smoothScrolling": true,
    "editor.scrollBeyondLastLine": false,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "expand",
    "editor.renderWhitespace": "none",
    "editor.guides.indentation": false,
    "editor.renderControlCharacters": false,
    "editor.lineNumbers": "on",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": false,
    // ================== FILES ==================
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "workbench.editor.labelFormat": "short",
    "workbench.statusBar.visible": false,
    "workbench.sideBar.location": "right",
    "workbench.secondarySideBar.defaultVisibility": "visible",
    "workbench.layoutControl.enabled": false,
    "workbench.startupEditor": "none",
    "workbench.activityBar.location": "top",
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.showTabs": "multiple",
    "explorer.compactFolders": false,
    "breadcrumbs.enabled": false,
    "window.menuBarVisibility": "compact",
    "window.titleBarStyle": "custom",
    "window.commandCenter": false,
    "window.zoomLevel": 0.5,
    // ================== TERMINAL ==================
    "terminal.integrated.fontFamily": "JetBrains Mono, monospace",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.smoothScrolling": true,
    // ================== EXTRA STYLE / APC ==================
    "apc.font.family": "Inter",
    "apc.stylesheet": {
        ".title-label > h2": "display: none;",
        ".activitybar.left, .activitybar.right": "background-color: #1e1e2f !important; border-bottom: 1px solid #3d3d5c; box-shadow: 0 1px 4px rgba(0,0,0,0.4);"
    },
    "workbench.iconTheme": "symbols",
    "workbench.colorTheme": "Aura Dracula Spirit (Soft)",
}
